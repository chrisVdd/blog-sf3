        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        {% javascripts
            '@jquery'
            '@bootstrap_js'
            'bundles/appfront/js/offcanvas.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            <script>
                $("span.menu").click(function(){
                    $(" ul.navig").slideToggle("slow" , function(){
                    });
                });
            </script>

        {% endjavascripts %}

    </body>
</html>