                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Havelange 2018</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="{{ path('app_front_homepage') }}">Accueil</a></li>
                        <li><a href="{{ path('app_front_news') }}">News</a></li>
                        <li><a href="{{ path('app_front_candidates') }}">Les candidats</a></li>
                    </ul>
                </div><!-- /.nav-collapse -->
            </div><!-- /.container -->
        </nav><!-- /.navbar -->

        <div class="container">

            <div class="col-xs-12 col-sm-12">

                    {% block page_content %}
                    {% endblock %}

                </div><!--/.col-xs-12.col-sm-9-->
            <hr>

        </div><!--/.container-->

        {% block body %}
        {% endblock %}

        <footer class="footer">
            <div class="container">
                <p class="text-muted">Â© 2017 Vandendyck Christina.</p>
            </div>
        </footer>

