{% extends 'template-admin.html.twig' %}

{% block page_content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">

                <div class="box-header with-border">
                    <h3 class="box-title">Category listing</h3>
                </div>

                <div class="box-body">
                    <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row">
                            <div class="col-sm-6"></div>
                            <div class="col-sm-6"></div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="example2" class="table table-bordered table-hover dataTable" role="grid"
                                       aria-describedby="example2_info">
                                    <thead>
                                    <tr role="row">
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Slug</th>
                                        <th>Create Date</th>
                                        <th>Update Date</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for category in categories %}
                                        <tr role="row" class="odd">
                                            <td>{{ category.id }}</td>
                                            <td>{{ category.name }}</td>
                                            <td>{{ category.slug }}</td>
                                            <td>{% if category.created %}{{ category.created|date('d/m/Y H:i:s') }}{% endif %}</td>
                                            <td>{% if category.updated %}{{ category.updated|date('d/m/Y H:i:s') }}{% endif %}</td>
                                            <td>
                                                <a href="{{ path('admin_category_show', { 'id': category.id }) }}"
                                                   class="btn btn-info">show</a>

                                                <a href="{{ path('admin_category_edit', { 'id': category.id }) }}"
                                                   class="btn btn-success">edit</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    <tfoot>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Slug</th>
                                        <th>Create Date</th>
                                        <th>Update Date</th>
                                        <th>Actions</th>
                                    </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-5">
                                <div class="dataTables_info" id="example2_info" role="status" aria-live="polite">
                                    Showing 1 to 10 of
                                    {#@todo comper combien de posts#}
                                    entries
                                </div>
                            </div>
                            <div class="col-sm-7">
